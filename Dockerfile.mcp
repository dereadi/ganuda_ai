# Model Context Protocol integration for tool usage

FROM node:20-alpine

WORKDIR /app

# Install Python for hybrid tool support
RUN apk add --no-cache python3 py3-pip curl

# Copy MCP server files
COPY mcp/package*.json ./
RUN npm ci --only=production

COPY mcp/ .
COPY tools/ /tools/

# Install Python dependencies for tools
RUN pip3 install --no-cache-dir requests aiohttp psycopg2-binary redis

# Expose MCP protocol port
EXPOSE 3000

# Environment setup
ENV NODE_ENV=production
ENV MCP_MODE=LOCAL
ENV TOOL_PATH=/tools

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Run the MCP server
CMD ["node", "server.js"]